{% extends 'base.html.twig' %}

{% block title %}Patient index{% endblock %}

{% block body %} <br><br>
<div class="container">
    <h1>Liste  de Patients</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Phone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.id }}</td>
                <td>{{ patient.nom }}</td>
                <td>{{ patient.prenom }}</td>
                <td>{{ patient.phone }}</td>
                <td>
                    <a class="btn btn-outline-primary" href="{{ path('app_patient_show', {'id': patient.id}) }}"><i class="fas fa-eye"></i></a>
                    <a class="btn btn-outline-warning" href="{{ path('app_patient_edit', {'id': patient.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun resultat trouve </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('app_patient_new') }}">Nouveau</a>
    </div>
{% endblock %}
