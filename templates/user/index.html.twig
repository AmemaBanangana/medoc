{% extends 'base.html.twig' %}

{% block title %}Hello UserController!
{% endblock %}

{% block body %}
	<br>
	<div class="container">
	<a class="btn btn-outline-primary" href="{{path('app_register')}}">Nouveau</a>
		<table class="table">
			<thead>
				<tr>
					<th>id</th>
					<th>Nom</th>
					<th>prenom</th>
					<th>email</th>
					<th>roles</th>
					<th>Telephone</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{user.id}}
						</td>
						<td>{{user.medecin.nom}}
						</td>
						<td>{{user.medecin.prenom}}
						</td>

						<td>
							{{ user.email }}
						</td>
						<td>
							{{user.roles|join(',')}}
						</td>
						<td>
							{{user.medecin.phone}}
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</tr>
	</tbody>
</tbody></table></div>{% endblock %}
