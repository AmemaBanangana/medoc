{% extends 'base.html.twig' %}

{% block title %}Dosage index{% endblock %}

{% block body %}
    <h1>Dosage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Dosage</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dosage in dosages %}
            <tr>
                <td>{{ dosage.id }}</td>
                <td>{{ dosage.dosage }}</td>
                <td>
                    <a href="{{ path('app_dosage_show', {'id': dosage.id}) }}">show</a>
                    <a href="{{ path('app_dosage_edit', {'id': dosage.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_dosage_new') }}">Create new</a>
{% endblock %}
